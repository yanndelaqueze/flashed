<div class="container-invaders">
  <%= link_to "Back to Home", "/"  %>
  <div class="search">
    <%= form_with url: invaders_path, method: :get, class: "search-form" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Search for Invaders"
        %>
      <%= check_box_tag "status[]", "alive", false %>
      <%= label_tag "Alive"%>
      <%= check_box_tag "status[]", "damaged", false %>
      <%= label_tag "Damaged"%>
      <%= check_box_tag "status[]", "dead", false %>
      <%= label_tag "Dead"%>
      <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
    <% end %>
  </div>
  <div class="cards">
    <% @invaders.each do |invader| %>
      <div class="invader-card">
          <% if invader.photo.attached? %>
            <%= cl_image_tag invader.photo.key, class: "card-image"%>
          <% else %>
            <%= image_tag "http://invader.spotter.free.fr/images/#{invader.name}-grosplan.png", alt:"Invader", class: "card-image"%>
          <% end %>
          <p><%= link_to invader.name, invader_path(invader) %></p>
          <p><%= invader.status %></p>
          <p><%= invader.city.name %></p>
      </div>
    <% end %>
  </div>
</div>
